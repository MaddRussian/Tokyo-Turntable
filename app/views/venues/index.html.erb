<%# This is dead %>
<%= render "shared/rectangle_box", title: "All Venues" %>
<div class="container my-4">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    <% @venues.each do |venue| %>
      <div class="col">
        <div class="card h-100">
          <% if venue.photo.attached? %>
            <%= cl_image_tag venue.photo.key,
                  class: "card-img-top",
                  style: "height: 150px; object-fit: cover;",
                  alt: venue.name %>
          <% else %>
            <%= image_tag "https://via.placeholder.com/300x150?text=No+Image",
                  class: "card-img-top",
                  style: "height: 150px; object-fit: cover;" %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1">
              <%= link_to venue.name, venue_path(venue), class: "text-decoration-none" %>
            </h5>
            <p class="card-text text-muted small mb-2"><%= venue.address %></p>
            <%= link_to "View details", venue_path(venue),
                        class: "btn btn-sm btn-primary mt-auto w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
