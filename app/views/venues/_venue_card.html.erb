<div class="card venue-card h-100">
  <% if venue.photo.attached? %>
    <%= cl_image_tag venue.photo.key,
          class: "card-img-top",
          style: "height:150px; object-fit:cover;",
          alt: venue.name %>
  <% else %>
    <%= image_tag "https://via.placeholder.com/300x150?text=No+Image",
          class: "card-img-top",
          style: "height:150px; object-fit:cover;" %>
  <% end %>
  <div class="card-body d-flex flex-column ">
    <h5 class="card-title mb-1 text-black">
      <%= link_to venue.name, venue_path(venue), class: "stretched-link text-decoration-none" %>
    </h5>
    <p class="card-text small mb-2 text-black">
      <%= venue.address %>
    </p>
  </div>
</div>
