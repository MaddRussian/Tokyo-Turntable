<%# app/views/pages/home.html.erb %>
<div id="home-page">
  <%# Top section: Contains the main graphic image and the title %>
  <%# MODIFIED: Added main-content-card to home-top-section %>
  <div class="home-top-section main-content-card">
    <%# The main graphic image. Using .jpg as your file is .jpg. %>
    <%# Ensure 'tokyo_tt_background.png' is correct, your file upload shows 'tokyo_tt_background.jpg' %>
    <%= image_tag "tokyo_tt_background.png", alt: "Tokyo Turntable Graphic", class: "main-visual-graphic" %>
    <%# The H1 title positioned over or near the graphic %>
  </div>
  <%# Bottom section: Contains the search fields %>
  <%# MODIFIED: Added main-content-card to search-fields-container %>
  <div class="home-bottom-section main-content-card form-card-bottom-margin">
    <div class="search-fields-container"> <%# This inner container is fine if it helps your search field styling %>
      <h2 class="home-tagline">Catch a show. <br>
        Discover the city. </h2>
      <div class="container"> <%# This inner container is fine if it helps your search field styling %>
        <%= render "shared/location" %>
      </div>
    </div>
  </div>
</div>
