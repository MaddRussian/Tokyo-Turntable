<%# app/views/users/profile.html.erb %>
<div class="profile-page-content-wrapper"> <%# NEW: This wrapper will center the profile content %>
  <%# Profile Title Section %>
  <div class="text-center mb-4 main-content-card">
    <h2><%= "#{@user.username.capitalize}'s Profile" %></h2>
  </div>
  <%# User Image Placeholder Section %>
  <div class="text-center mb-5 main-content-card">
    <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center profile-image-container">
      <% if @user.photo.attached? %>
        <%= image_tag @user.photo, class: "img-fluid rounded-circle profile-image", alt: @user.username %>
      <% else %>
        <span class="h1 text-dark">ðŸ‘¤</span>
      <% end %>
    </div>
  </div>
  <%# Band Details Section %>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <p class="mb-0">
        <a class="btn profile-collapse-btn" data-bs-toggle="collapse" href="#bandDetailsCollapse" role="button" aria-expanded="false" aria-controls="bandDetailsCollapse">
          + My Band Details
        </a>
      </p>
      <div class="collapse mt-3" id="bandDetailsCollapse">
        <% if @user.band.present? %>
          <div class="row g-2 text-dark">
            <div class="col-md-6">
              <p class="mb-1"><strong>Band Name:</strong> <%= @user.band.name %></p>
              <p class="mb-1"><strong>Genre:</strong> <%= @user.band.genre %></p>
              <p class="mb-1"><strong>Hometown:</strong> <%= @user.band.hometown %></p>
            </div>
            <div class="col-md-6">
              <% if @user.band.website_link.present? %>
                <p class="mb-1"><strong>Website:</strong> <a href="<%= @user.band.website_link %>" target="_blank" class="text-dark text-decoration-none">Website</a></p>
              <% end %>
            </div>
          </div>
        <% else %>
          <p class="text-dark">This user is not currently associated with a band.</p>
        <% end %>
      </div>
    </div>
  </div>
  <%# Spotify, Discogs, and Past Shows Section %>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <h3 class="card-title mb-3 text-dark">Other Details</h3>
      <ul class="list-unstyled mb-0 text-dark">
        <% if @user.spotify_link.present? %>
          <li class="mb-2">
            <strong>My Spotify:</strong> <a href="<%= @user.spotify_link %>" target="_blank" class="text-dark text-decoration-none">Visit Spotify</a>
          </li>
        <% end %>
        <% if @user.discogs_link.present? %>
          <li class="mb-2">
            <strong>My Discogs:</strong> <a href="<%= @user.discogs_link %>" target="_blank" class="text-dark text-decoration-none">Visit Discogs</a>
          </li>
        <% end %>
        <% if @user.past_shows.present? %>
          <li class="mb-2">
            <strong>Past Shows:</strong> <%= @user.past_shows %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%# My Favorite Gigs Section %>
  <h2 class="mb-3 text-dark">My Favorite Gigs</h2>
  <% if @favorited_gigs.any? %>
    <div class="row row-cols-1 g-3">
      <% @favorited_gigs.each do |gig| %>
        <div class="col">
          <div class="main-content-card">
            <div class="card-body d-flex justify-content-between align-items-center flex-wrap text-dark">
              <div>
                <p class="mb-1"><strong>Date:</strong> <%= gig.date.strftime("%B %d, %Y") %></p>
                <% if gig.bands.any? %>
                  <p class="mb-0"><strong>Bands:</strong> <%= gig.bands.map(&:name).join(', ') %></p>
                <% else %>
                  <p class="mb-0">No bands booked for this gig.</p>
                <% end %>
              </div>
              <%# Unfavorite Button %>
              <% favorite_record_id = current_user.favorites.find_by(favoritable: gig)&.id %>
              <% if favorite_record_id.present? %>
                <div class="mt-2 mt-md-0">
                  <a href="<%= gig_favorite_path(gig, favorite_record_id) %>"
                      data-turbo-method="delete" data-turbo-confirm="Remove from favorites?"
                      class="btn profile-unfavorite-btn">Unfavorite</a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-dark">You haven't favorited any gigs yet.</p>
  <% end %>
</div>
 <%# End of .profile-page-content-wrapper %>
