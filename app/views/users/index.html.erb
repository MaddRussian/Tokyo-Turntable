<%# app/views/users/index.html.erb %>
<%# This wrapper ensures consistent centering and max-width for the cards %>
<div class="profile-page-content-wrapper">
  <div class="row row-cols-1 g-3">
    <% @users.each do |user| %>
      <div class="col">
        <div class="main-content-card"> <%# This class provides the consistent width/border/shadow %>
          <%# Changed card-body to flex-column to stack content vertically %>
          <div class="card-body d-flex flex-column text-dark">
            <%# Top section: Image and Username %>
            <div class="d-flex align-items-center mb-3"> <%# mb-3 for spacing before buttons/bottom section %>
              <div class="me-3">
                <div class="rounded-circle bg-secondary index-profile-image-container">
                  <% if user&.photo.attached? %>
                    <%= image_tag user.photo, class: "index-profile-image", alt: user&.username %>
                  <% else %>
                    <span class="text-dark index-default-profile-icon">ðŸ‘¤</span>
                  <% end %>
                </div>
              </div>
              <div>
                <p class="mb-0"><strong>Username:</strong> <%= user&.username&.capitalize %></p>
 <%# mb-0 for compactness %>
              </div>
            </div>
            <%# Bottom section: Buttons - pushed to the bottom using flexbox %>
            <%# This div will contain both buttons and be centered horizontally %>
            <div class="d-flex justify-content-around align-items-center mt-auto pt-3 border-top border-dark"> <%# mt-auto pushes it down, pt-3 adds padding, border-top adds a line %>
              <%# View Details Button %>
              <a href="<%= user_path(user) %>" class="btn profile-unfavorite-btn">View Details</a> <%# Removed btn-sm as it's now a full-width button %>
              <%# Follow/Unfollow Button %>
              <% if user_signed_in? %>
                <% if current_user.favorited?(user) %>
                  <%= link_to "Unfollow", user_favorite_path(user, current_user.favorites.find_by(favoritable: user).id),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to unfollow this user?" },
                    class: "btn gig-unfavorite-btn" %> <%# Use gig-unfavorite-btn for consistency %>
                <% else %>
                  <%= link_to "Follow", user_favorites_path(user),
                       data: { turbo_method: :post },
                        class: "btn gig-favorite-btn" %> <%# Use gig-favorite-btn for consistency %>
                <% end %>
              <% else %>
                <small class="text-muted">Sign in to follow</small>
              <% end %>
            </div>
          </div>
 <%# Close card-body %>
        </div>
 <%# Close main-content-card %>
      </div>
 <%# Close col %>
    <% end %> <%# Close @users.each %>
  </div>
 <%# Close row %>
</div>
 <%# Close profile-page-content-wrapper %>
