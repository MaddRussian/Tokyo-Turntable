<%# app/views/users/index.html.erb %>
<%# This wrapper ensures consistent centering and max-width for the cards %>
<div class="profile-page-content-wrapper">
  <%# --- GIGS OTHER USERS ARE ATTENDING SECTION (REVERTED TO ORIGINAL STATE) --- %>
  <div class="row row-cols-1 g-3">
    <div class="col">
      <%# REVERTED: This top card is now exactly as it was in your original code, no inline style added %>
      <div class="main-content-card mb-4">
        <div class="card-body">
          <p class="mb-0 text-center">
            <a class="btn profile-unfavorite-btn" data-bs-toggle="collapse" href="#popularGigsCollapse" role="button" aria-expanded="false" aria-controls="popularGigsCollapse">
              Shows other users are attending
            </a>
          </p>
          <div class="collapse mt-3" id="popularGigsCollapse">
            <% if @popular_gigs.any? %>
              <div class="row g-2 text-dark">
                <% @popular_gigs.each_with_index do |gig, index| %>
                  <div class="col-12">
                    <div class="d-flex justify-content-between align-items-start py-1">
                      <div class="flex-grow-1 me-2">
                        <a href="<%= gig_path(gig) %>" class="text-decoration-none text-dark">
                          <% if gig.bands.any? %>
                            <p class="mb-0"><strong><%= gig.bands.first.name %></strong></p>
                          <% else %>
                            <p class="mb-0"><small class="text-muted">No band listed.</small></p>
                          <% end %>
                        </a>
                        <%# Display favorite count and users %>
                        <%
                        # Ensure favoriting_users only contains User objects (not nil)
                        favoriting_users = gig.favorites.map(&:user).compact.uniq
                        favoriting_count = favoriting_users.count
                        %>
                        <p class="mb-0 mt-1">
                          <small class="text-muted">
                            <%= pluralize(favoriting_count, 'person') %> attending:
                            <% if favoriting_users.any? %>
                              <div class="d-flex flex-wrap align-items-center mt-1">
                                <% favoriting_users.each do |favoritor_user| %>
                                  <div class="d-flex align-items-center me-2 mb-1">
                                    <div class="mini-profile-image-container me-1">
                                      <% if favoritor_user&.photo.attached? %>
                                        <%= image_tag favoritor_user.photo, class: "mini-profile-image", alt: favoritor_user.username %>
                                      <% else %>
                                        <span class="mini-default-profile-icon">ðŸ‘¤</span>
                                      <% end %>
                                    </div>
                                    <%= link_to favoritor_user.username.capitalize, user_path(favoritor_user), class: "text-dark text-decoration-none" %>
                                  </div>
                                <% end %>
                              </div>
                            <% else %>
                              (No users listed)
                            <% end %>
                          </small>
                        </p>
                      </div>
                      <%# Favorite/Unfavorite button for current_user %>
                      <div class="flex-shrink-0">
                        <% if user_signed_in? %>
                          <% if current_user.favorited?(gig) %>
                            <%# Unfavorite button %>
                            <%= link_to gig_favorite_path(gig, current_user.favorites.find_by(favoritable: gig).id),
                                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to unfavorite this gig?" },
                                class: "gig-unfavorite-btn", title: "Unfavorite" do %>
                              <i class="fa-solid fa-star"></i>
                            <% end %>
                          <% else %>
                            <%# Favorite button %>
                            <%= link_to gig_favorites_path(gig),
                                data: { turbo_method: :post },
                                class: "gig-favorite-btn", title: "Favorite" do %>
                              <i class="fa-regular fa-star"></i>
                            <% end %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <% unless index == @popular_gigs.length - 1 %>
                    <hr class="my-1 border-dark">
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <p class="text-dark mt-3 text-center">No gigs have been favorited by other users yet.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%# --- END OF GIGS OTHER USERS ARE ATTENDING SECTION --- %>
  <%# --- MY FRIENDS SECTION (MODIFIED FOR INDIVIDUAL CARDS TO MATCH TOP CARD WIDTH, NO COLLAPSE) --- %>
  <div class="row row-cols-1 g-3">
    <div class="col-12 mt-4 text-center mb-3"> <%# Added mb-3 for space below header %>
      <h3 class="card-title text-dark">My Friends</h3>
    </div>
    <% if user_signed_in? && @users.any? %>
      <% @users.each do |user| %>
        <div class="col-12">
          <%# Individual friend card: enforcing width: 100% and margin: 0 auto to fill column and center %>
          <div class="main-content-card mb-4" style="width: 100%; margin: 0 auto;">
            <div class="card-body d-flex flex-column text-dark">
              <div class="d-flex align-items-center mb-3">
                <div class="me-3">
                  <div class="rounded-circle bg-secondary index-profile-image-container">
                    <% if user&.photo.attached? %>
                      <%= image_tag user.photo, class: "index-profile-image", alt: user&.username %>
                    <% else %>
                      <span class="text-dark index-default-profile-icon">ðŸ‘¤</span>
                    <% end %>
                  </div>
                </div>
                <div>
                  <p class="mb-0"><strong>Username:</strong> <%= user&.username&.capitalize %></p>
                </div>
              </div>
              <div class="d-flex justify-content-around align-items-center mt-auto pt-3 border-top border-dark">
                <a href="<%= user_path(user) %>" class="btn profile-unfavorite-btn">View Details</a>
                <%# Unfollow button for each friend %>
                <% if user_signed_in? %>
                  <% if current_user.favorited?(user) %>
                    <%= link_to "Unfollow", user_favorite_path(user, current_user.favorites.find_by(favoritable: user).id),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to unfollow this user?" },
                      class: "btn gig-unfavorite-btn" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
        <%# Message card for no friends/not signed in, also consistent width %>
        <div class="main-content-card mb-4" style="width: 100%; margin: 0 auto;">
          <div class="card-body">
            <p class="text-dark mt-3 text-center">
              <% if user_signed_in? %>
                You haven't followed any users yet. Start following people to see them here!
              <% else %>
                Sign in to see your friends list.
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%# --- END OF MY FRIENDS SECTION --- %>
</div>
