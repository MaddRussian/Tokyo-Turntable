<%# app/views/users/index.html.erb %>
<%# This wrapper ensures consistent centering and max-width for the cards %>
<div class="profile-page-content-wrapper">
  <%# --- NEW / MODIFIED SECTION FOR GIGS OTHER USERS ARE ATTENDING --- %>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <p class="mb-0 text-center">
        <a class="btn profile-collapse-btn" data-bs-toggle="collapse" href="#popularGigsCollapse" role="button" aria-expanded="false" aria-controls="popularGigsCollapse">
          Shows other users are attending
        </a>
      </p>
      <div class="collapse mt-3" id="popularGigsCollapse">
        <% if @popular_gigs.any? %>
          <div class="row g-2 text-dark">
            <% @popular_gigs.each_with_index do |gig, index| %>
              <div class="col-12">
                <div class="d-flex justify-content-between align-items-start py-1"> <%# Changed to align-items-start for better multi-line content %>
                  <div class="flex-grow-1 me-2">
                    <a href="<%= gig_path(gig) %>" class="text-decoration-none text-dark">
                      <% if gig.bands.any? %>
                        <p class="mb-0"><strong><%= gig.bands.first.name %></strong></p>
                      <% else %>
                        <p class="mb-0"><small class="text-muted">No band listed.</small></p>
                      <% end %>
                    </a>
                    <%# Display favorite count and users %>
                    <%
                      favoriting_users = gig.favorites.map(&:user).uniq
                      favoriting_count = favoriting_users.count
                    %>
                    <p class="mb-0 mt-1">
                      <small class="text-muted">
                        <%= pluralize(favoriting_count, 'person') %> attending:
                        <% if favoriting_users.any? %>
                          <%= favoriting_users.map { |user| link_to user.username.capitalize, user_path(user), class: "text-dark text-decoration-none" }.join(', ').html_safe %>
                        <% else %>
                          (No users listed)
                        <% end %>
                      </small>
                    </p>
                  </div>
                  <%# Unfavorite button for current_user if they have favorited this gig %>
                  <% if user_signed_in? && current_user.favorited?(gig) %>
                    <% favorite_record_id = current_user.favorites.find_by(favoritable: gig)&.id %>
                    <% if favorite_record_id.present? %>
                      <div class="flex-shrink-0">
                        <a href="<%= gig_favorite_path(gig, favorite_record_id) %>"
                            data-turbo-method="delete" data-turbo-confirm="Remove from favorites?"
                            class="btn btn-sm btn-outline-dark compact-unfavorite-btn">Unfavorite</a>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <% unless index == @popular_gigs.length - 1 %>
                <hr class="my-1 border-dark">
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-dark mt-3 text-center">No gigs have been favorited by other users yet.</p>
        <% end %>
      </div>
    </div>
  </div>
  <%# --- END OF NEW / MODIFIED SECTION --- %>
  <%# Existing User Listing Section (rest of your original code) %>
  <div class="row row-cols-1 g-3">
    <% @users.each do |user| %>
      <div class="col">
        <div class="main-content-card">
          <div class="card-body d-flex flex-column text-dark">
            <div class="d-flex align-items-center mb-3">
              <div class="me-3">
                <div class="rounded-circle bg-secondary index-profile-image-container">
                  <% if user&.photo.attached? %>
                    <%= image_tag user.photo, class: "index-profile-image", alt: user&.username %>
                  <% else %>
                    <span class="text-dark index-default-profile-icon">ðŸ‘¤</span>
                  <% end %>
                </div>
              </div>
              <div>
                <p class="mb-0"><strong>Username:</strong> <%= user&.username&.capitalize %></p>
              </div>
            </div>
            <div class="d-flex justify-content-around align-items-center mt-auto pt-3 border-top border-dark">
              <a href="<%= user_path(user) %>" class="btn profile-unfavorite-btn">View Details</a>
              <% if user_signed_in? %>
                <% if current_user.favorited?(user) %>
                  <%= link_to "Unfollow", user_favorite_path(user, current_user.favorites.find_by(favoritable: user).id),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to unfollow this user?" },
                    class: "btn gig-unfavorite-btn" %>
                <% else %>
                  <%= link_to "Follow", user_favorites_path(user),
                       data: { turbo_method: :post },
                        class: "btn gig-favorite-btn" %>
                <% end %>
              <% else %>
                <small class="text-muted">Sign in to follow</small>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
