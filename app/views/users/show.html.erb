<%# app/views/users/profile.html.erb %>
<div class="profile-page-content-wrapper"> <%# NEW: This wrapper will center the profile content %>
  <%# Profile Title Section %>
  <div class="text-center mb-4 main-content-card">
    <h2><%= "#{@user&.username.capitalize}'s Profile" %></h2>
  </div>
  <%# User Image Placeholder Section %>
  <div class="text-center mb-5 main-content-card">
    <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center profile-image-container">
      <% if @user.photo.attached? %>
        <%# REMOVED: img-fluid and rounded-circle classes %>
        <%= image_tag @user.photo, class: "profile-image", alt: @user&.username %>
      <% else %>
        <span class="h1 text-dark">ðŸ‘¤</span>
      <% end %>
    </div>
  </div>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <p class="mb-0">
        <a class="btn profile-collapse-btn" data-bs-toggle="collapse" href="#bandDetailsCollapse" role="button" aria-expanded="false" aria-controls="bandDetailsCollapse">
          + My Band Details
        </a>
      </p>
      <div class="collapse mt-3" id="bandDetailsCollapse">
        <% if @user.band.present? %>
          <div class="row g-2 text-dark">
            <div class="col-md-6">
              <p class="mb-1"><strong>Band Name:</strong> <%= @user&.band&.name %></p>
              <p class="mb-1"><strong>Genre:</strong> <%= @user&.band&.genre %></p>
              <p class="mb-1"><strong>Hometown:</strong> <%= @user&.band&.hometown %></p>
            </div>
            <div class="col-md-6">
              <% if @user.band.website_link.present? %>
                <p class="mb-1"><strong>Website:</strong> <a href="<%= @user&.band&.website_link %>" target="_blank" class="text-dark text-decoration-none">Website</a></p>
              <% end %>
            </div>
          </div>
        <% else %>
          <p class="text-dark">This user is not currently associated with a band.</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <h3 class="card-title mb-3 text-dark">Other Details</h3>
      <ul class="list-unstyled mb-0 text-dark">
        <% if @user&.spotify_link&.present? %>
          <li class="mb-2">
            <strong>My Spotify:</strong> <a href="<%= @user&.spotify_link %>" target="_blank" class="text-dark text-decoration-none">Visit Spotify</a>
          </li>
        <% end %>
        <% if @user&.discogs_link&.present? %>
          <li class="mb-2">
            <strong>My Discogs:</strong> <a href="<%= @user&.discogs_link %>" target="_blank" class="text-dark text-decoration-none">Visit Discogs</a>
          </li>
        <% end %>
        <% if @user&.past_shows.present? %>
          <li class="mb-2">
            <strong>Past Shows:</strong> <%= @user&.past_shows %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%# app/views/users/profile.html.erb - relevant section %>
  <%# My Favorite Gigs Section - Overall Card with Centered Button and Collapsible List %>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <p class="mb-0 text-center"> <%# text-center to center the button within its card-body %>
        <%# Ensure data-bs-target points to a UNIQUE ID for the collapse section %>
        <a class="btn profile-collapse-btn" data-bs-toggle="collapse" href="#favoriteGigsCollapse" role="button" aria-expanded="false" aria-controls="favoriteGigsCollapse">
          + My Favorite Gigs <%# Button text %>
        </a>
      </p>
      <%# The collapsible content for the favorite gigs list - starts collapsed by default %>
      <div class="collapse mt-3" id="favoriteGigsCollapse"> <%# This ID must match the button's href %>
        <% if @favorited_gigs.any? %>
          <%# This mimics the "My Band Details" inner structure: a row with full-width columns %>
          <div class="row g-2 text-dark"> <%# g-2 provides consistent spacing like other cards %>
            <% @favorited_gigs.each_with_index do |gig, index| %>
              <div class="col-12"> <%# col-12 ensures each item takes the full width, preventing multiple columns %>
                <div class="d-flex justify-content-between align-items-center py-1"> <%# py-1 for very compact vertical padding %>
                  <%# Left side: Headliner Band Name (linked) - no date, just band name %>
                  <div class="flex-grow-1 me-2">
                    <a href="<%= gig_path(gig) %>" class="text-decoration-none text-dark">
                      <% if gig.bands.any? %>
                        <p class="mb-0"><strong><%= gig.bands.first.name %></strong></p>
                        <%# Simple p tag, mb-0 for no margin %>
                      <% else %>
                        <p class="mb-0"><small class="text-muted">No band listed.</small></p>
                      <% end %>
                    </a>
                  </div>
                  <%# Right side: Unfavorite Button %>
                  <% favorite_record_id = current_user.favorites.find_by(favoritable: gig)&.id %>
                  <% if favorite_record_id.present? %>
                    <div class="flex-shrink-0">
                      <a href="<%= gig_favorite_path(gig, favorite_record_id) %>"
                        data-turbo-method="delete" data-turbo-confirm="Remove from favorites?"
                        class="btn btn-sm btn-outline-dark compact-unfavorite-btn">Unfavorite</a>
                    </div>
                  <% end %>
                </div>
                <%# End of d-flex for list item %>
              </div>
              <%# End of col-12 %>
              <%# Line separator after each gig item, but not after the very last one %>
              <% unless index == @favorited_gigs.length - 1 %>
                <hr class="my-1 border-dark"> <%# my-1 for minimal vertical margin around the line %>
              <% end %>
            <% end %> <%# End of @favorited_gigs.each %>
          </div>
          <%# End of row %>
        <% else %>
          <p class="text-dark mt-3 text-center">You haven't favorited any gigs yet.</p>
        <% end %>
      </div>
      <%# End of collapse div %>
    </div>
    <%# End of card-body %>
  </div>
  <%# End of main-content-card for Favorite Gigs Section %>
