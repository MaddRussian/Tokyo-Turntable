<%# app/views/users/profile.html.erb %>
<div class="profile-page-content-wrapper">
  <%# Profile Title Section %>
  <div class="text-center mb-4 main-content-card">
    <%# Profile Image Container %>
    <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center profile-image-container mb-3">
      <% if @user.photo.attached? %>
        <%= image_tag @user.photo, class: "profile-image", alt: @user&.username %>
      <% else %>
        <span class="h1 text-dark">ðŸ‘¤</span>
      <% end %>
    </div>
    <%# Profile Title (Username) %>
    <h2 class="mb-0"><%= "#{@user&.username.capitalize}'s Profile" %></h2>
    <%# --- Friend/Unfriend Button Section (Transplanted from index.html.erb) --- %>
    <% if user_signed_in? %>
      <% if @user != current_user %> <%# Only show if viewing another user's profile %>
        <div class="mt-3"> <%# Added margin for spacing below the profile title %>
          <% if current_user.favorited?(@user) %>
            <%= link_to "Unfollow", user_favorite_path(@user, current_user.favorites.find_by(favoritable: @user).id),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to unfollow this user?" },
              class: "btn gig-unfavorite-btn" %>
          <% else %>
            <%= link_to "Follow", user_favorites_path(@user),
              data: { turbo_method: :post },
              class: "btn gig-favorite-btn" %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <%# This block only executes if no user is signed in and viewing another's profile %>
      <% if @user != current_user %>
        <small class="text-muted mt-3 d-block">Sign in to follow this user</small>
      <% end %>
    <% end %>
    <%# --- End Friend/Unfriend Button Section --- %>
  </div>
  <%# Other Details Card - All content within this card-body %>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <% if @user.bio.present? %>
        <div class="user-bio mb-3">
          <h3>Bio</h3>
          <p><%= @user.bio %></p>
        </div>
      <% end %>
      <hr class="my-1 border-dark">
      <% if @user == current_user %>
        <div class="user-details mb-3">
          <h3>Private Details</h3>
          <p>Email: <%= @user.email %></p>
          <p>Address: <%= @user.address %></p>
          <hr class="my-1 border-dark">
        </div>
      <% end %>
      <h3 class="card-title mb-3 text-dark">Socials</h3>
      <ul class="list-unstyled mb-0 text-dark">
        <% if @user&.spotify_link&.present? %>
          <li class="mb-2">
            <a href="<%= @user.spotify_link %>" target="_blank" class="text-dark fs-4">
              <i class="fa-brands fa-spotify"></i>
            </a>
          </li>
        <% end %>
        <% if @user&.discogs_link&.present? %>
          <li class="mb-2">
            <strong>My Discogs:</strong> <a href="<%= @user&.discogs_link %>" target="_blank" class="text-dark text-decoration-none">Visit Discogs</a>
          </li>
        <% end %>
        <% if @user == current_user %>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn profile-collapse-btn mt-3" %>
        <% end %>
        <% if @user&.past_shows.present? %>
          <li class="mb-2">
            <strong>Past Shows:</strong> <%= @user&.past_shows %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%# My Friends Section - Overall Card with Centered Button and Collapsible List %>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <p class="mb-0 text-center">
        <a class="btn profile-collapse-btn" data-bs-toggle="collapse" href="#favoriteUsersCollapse" role="button" aria-expanded="false" aria-controls="favoriteUsersCollapse">
          My Friends
        </a>
      </p>
      <div class="collapse mt-3" id="favoriteUsersCollapse">
        <% if @favorited_users.any? %>
          <div class="row g-2 text-dark">
            <% @favorited_users.each_with_index do |friend_user, index| %> <%# Changed 'user' to 'friend_user' for clarity %>
              <div class="col-12">
                <div class="d-flex justify-content-between align-items-center py-1">
                  <div class="flex-grow-1 me-2">
                    <a href="<%= user_path(friend_user) %>" class="text-decoration-none text-dark">
                      <% if friend_user.username.present? %>
                        <p class="mb-0"><strong><%= friend_user&.username&.capitalize %></strong></p>
                      <% else %>
                        <p class="mb-0"><small class="text-muted">Username not available.</small></p>
                      <% end %>
                    </a>
                  </div>
                  <% if current_user.present? %> <%# Ensure current_user exists before trying to find favorite %>
                    <% favorite_record_id = current_user.favorites.find_by(favoritable: friend_user)&.id %>
                    <% if favorite_record_id.present? %>
                      <div class="flex-shrink-0">
                        <a href="<%= user_favorite_path(friend_user, favorite_record_id) %>"
                            data-turbo-method="delete" data-turbo-confirm="Unfollow this user?"
                            class="btn profile-collapse-btn">Unfollow</a>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <% unless index == @favorited_users.length - 1 %>
                <hr class="my-1 border-dark">
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-dark mt-3 text-center">You have no friends yet.</p>
        <% end %>
      </div>
    </div>
  </div>
  <%# My Favorite Gigs Section - Overall Card with Centered Button and Collapsible List %>
  <div class="main-content-card mb-4">
    <div class="card-body">
      <p class="mb-0 text-center">
        <a class="btn profile-collapse-btn" data-bs-toggle="collapse" href="#favoriteGigsCollapse" role="button" aria-expanded="false" aria-controls="favoriteGigsCollapse">
          My Favorite Gigs
        </a>
      </p>
      <div class="collapse mt-3" id="favoriteGigsCollapse">
        <% if @favorited_gigs.any? %>
          <div class="row g-2 text-dark">
            <% @favorited_gigs.each_with_index do |gig, index| %>
              <div class="col-12">
                <div class="d-flex justify-content-between align-items-center py-1">
                  <div class="flex-grow-1 me-2">
                    <a href="<%= gig_path(gig) %>" class="text-decoration-none text-dark">
                      <% if gig.bands.any? %>
                        <p class="mb-0"><strong><%= gig.bands.first.name %></strong></p>
                      <% else %>
                        <p class="mb-0"><small class="text-muted">No band listed.</small></p>
                      <% end %>
                    </a>
                  </div>
                  <% if current_user.present? %>
                    <% favorite_record_id = current_user.favorites.find_by(favoritable: gig)&.id %>
                    <% if favorite_record_id.present? %>
                      <div class="flex-shrink-0">
                        <a href="<%= gig_favorite_path(gig, favorite_record_id) %>"
                            data: { turbo_method: :delete, turbo_confirm: "Remove from favorites?" },
                            class: "btn profile-collapse-btn">Unfavorite</a>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <% unless index == @favorited_gigs.length - 1 %>
                <hr class="my-1 border-dark">
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-dark mt-3 text-center">You haven't favorited any gigs yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
